<a href="/" style="margin-top:10px;margin-left:15px;font-size: larger;"><i class="fas fa-arrow-left"></i></a>

<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card loginform card-body m-auto">
      <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i> Login</h1>
      <% include ./partials/messages %>
      <a href="/auth/google">Sign In with Google</a>
      <form action="/users/login" method="POST">
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email" />
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" id="password" name="password" class="form-control " placeholder="Enter Password" />
        </div>
        <button type="submit" class="btn btn-danger btn-block" style="width: 50%;">Login</button>
      </form>
      <p class="lead mt-4">
        <a href="/users/forgotPassword">Forgot Password?</a><br>

        No Account? <a href="/users/register">Register</a><br>

      </p>
    </div>
  </div>
</div>
